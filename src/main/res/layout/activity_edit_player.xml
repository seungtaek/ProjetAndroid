<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/DetailValueOdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/DetailLabelOdd"
                android:layout_width="@dimen/detail_label_width"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="right"
                android:paddingRight="@dimen/detail_values_margin"
                android:text="@string/detail_player_id" />

            <EditText
                android:id="@+id/activity_player_detail_editText_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:paddingLeft="@dimen/detail_values_margin" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            style="@style/DetailValueEven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/DetailLabelEven"
                android:layout_width="@dimen/detail_label_width"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="right"
                android:paddingRight="@dimen/detail_values_margin"
                android:text="@string/detail_player_name" />

            <EditText
                android:id="@+id/activity_player_detail_editText_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:paddingLeft="@dimen/detail_values_margin" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            style="@style/DetailValueOdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/DetailLabelOdd"
                android:layout_width="@dimen/detail_label_width"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="right"
                android:paddingRight="@dimen/detail_values_margin"
                android:text="@string/detail_player_firstname" />

            <EditText
                android:id="@+id/activity_player_detail_editText_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:paddingLeft="@dimen/detail_values_margin" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            style="@style/DetailValueEven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/DetailLabelEven"
                android:layout_width="@dimen/detail_label_width"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="right"
                android:paddingRight="@dimen/detail_values_margin"
                android:text="@string/detail_player_comment" />

            <EditText
                android:id="@+id/activity_player_detail_editText_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:paddingLeft="@dimen/detail_values_margin" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            style="@style/DetailValueOdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/DetailLabelOdd"
                android:layout_width="@dimen/detail_label_width"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="right"
                android:paddingRight="@dimen/detail_values_margin"
                android:text="@string/detail_player_picture" />

            <EditText
                android:id="@+id/activity_player_detail_editText_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:paddingLeft="@dimen/detail_values_margin" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

</ScrollView>